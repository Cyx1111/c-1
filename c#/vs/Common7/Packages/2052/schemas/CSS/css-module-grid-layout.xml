<CssModule name="Grid Layout" standard-reference="http://www.w3.org/TR/css3-grid-layout" status="WD" pub-date="2012-03-22">

  <CssProperty _locID="display">
    <entry value="grid" version="3.0" browsers="none"/>
    <entry value="inline-grid" version="3.0" browsers="none"/>
  </CssProperty>

  <CssProperty _locID="grid-cell" _locAttrData="description," restriction="string, enum" version="3.0" browsers="none" syntax="#item1 { $(name): 'n'; }" description="grid-cell 对网格项有效，用于将网格项放置在显式命名的网格单元内。" standard-reference="http://www.w3.org/TR/css3-grid-layout/#grid-cell">

    <entry value="none"/>
  </CssProperty>

  <CssProperty _locID="grid-column" _locAttrData="description" version="3.0" browsers="none" restriction="integer, string, enum" syntax="#item1 { $(name): start end; }" description="grid-column 用于在网格中放置网格项和显式定义的网格单元。" standard-reference="http://www.w3.org/TR/css3-grid-layout/#grid-column">
    
    <entry value="start"/>
    <entry value="end"/>
    <entry value="auto"/>
  </CssProperty>

  <CssProperty _locID="grid-column-align" _locAttrData="description" version="3.0" browsers="none" restriction="enum" syntax="article { $(name): center; }" description="对齐网格中的列。" standard-reference="http://www.w3.org/TR/css3-grid-layout/#grid-column-align">

    <entry _locID="grid-column-align_start" _locAttrData="description" value="start" description="将网格项的边距框的起始边缘与网格项的列的起始边缘对齐。"/>
    <entry _locID="grid-column-align_end" _locAttrData="description" value="end" description="将网格项的边距框的结束边缘与网格项的列的结束边缘对齐。"/>
    <entry _locID="grid-column-align_center" _locAttrData="description" value="center" description="将网格项的边距框的中心放置于网格项的列的中心。"/>
    <entry _locID="grid-column-align_stretch" _locAttrData="description" value="stretch" description="确保网格项的边距框与网格项的列的大小相等。"/>
  </CssProperty>

  <CssProperty _locID="grid-columns" _locAttrData="description" version="3.0" browsers="none" syntax="div { $(name): 150px 1fr; }" description="布局网格中的列。" standard-reference="http://www.w3.org/TR/css3-grid-layout/#grid-columns"/>

  <CssProperty _locID="grid-column-sizing" _locAttrData="description" version="3.0" browsers="none" description="默认情况下，任何隐式创建的列或行都会自动根据内容调整大小。默认大小可使用 grid-column-sizing 和 grid-row-sizing 属性进行更改。" standard-reference="http://www.w3.org/TR/css3-grid-layout/#grid-column-sizing">

    <entry value="auto"/>
    <entry value="minmax()"/>
  </CssProperty>

  <CssProperty _locID="grid-column-span" _locAttrData="description" version="3.0" browsers="none" restriction="integer" syntax="#item { $(name): 2; }." description="指定要跨的列数。" standard-reference="http://www.w3.org/TR/css3-grid-layout/#grid-row-span-and-grid-column-span"/>

  <CssProperty _locID="grid-flow" _locAttrData="description" version="3.0" browsers="none" restriction="enum" syntax="#item { $(name): rows; }" description="网格项可自动放置在网格的未占用空间中。grid-flow 属性控制搜索未占用空间的方向。" standard-reference="http://www.w3.org/TR/css3-grid-layout/#grid-flow">

    <entry value="none"/>
    <entry value="rows"/>
    <entry value="columns"/>
  </CssProperty>

  <CssProperty _locID="grid-row" _locAttrData="description" version="3.0" browsers="none" restriction="integer, string, enum" syntax="#item1 { $(name): start end; }" description="grid-row 用于在网格中放置网格项和显式定义的网格单元。" standard-reference="http://www.w3.org/TR/css3-grid-layout/#grid-row">

    <entry value="start"/>
    <entry value="end"/>
    <entry value="auto"/>
  </CssProperty>

  <CssProperty _locID="grid-row-align" _locAttrData="description" version="3.0" browsers="none" restriction="enum" description="对齐网格中的行。" syntax="div { $(name): stretch; }" standard-reference="http://www.w3.org/TR/css3-grid-layout/#grid-row-align">

    <entry _locID="grid-row-align_start" _locAttrData="description" value="start" description="将网格项的边距框的起始边缘与网格项的行的起始边缘对齐。"/>
    <entry _locID="grid-row-align_end" _locAttrData="description" value="end" description="将网格项的边距框的结束边缘与网格项的行的结束边缘对齐。"/>
    <entry _locID="grid-row-align_center" _locAttrData="description" value="center" description="将网格项的边距框的中心放置于网格项的行的中心。"/>
    <entry _locID="grid-row-align_stretch" _locAttrData="description" value="stretch" description="确保网格项的边距框与网格项的行的大小相等。"/>
  </CssProperty>

  <CssProperty _locID="grid-rows" _locAttrData="description" version="3.0" browsers="none" syntax="div { $(name): 50px 1fr 50px; }" description="布局网格中的列。" standard-reference="http://www.w3.org/TR/css3-grid-layout/#grid-rows"/>

  <CssProperty _locID="grid-row-sizing" _locAttrData="description" version="3.0" browsers="none" description="默认情况下，任何隐式创建的列或行都会自动根据内容调整大小。默认大小可使用 grid-column-sizing 和 grid-row-sizing 属性进行更改。" standard-reference="http://www.w3.org/TR/css3-grid-layout/#grid-row-sizing">

    <entry value="auto"/>
    <entry value="minmax()"/>
  </CssProperty>
  
  <CssProperty _locID="grid-row-span" _locAttrData="description" version="3.0" browsers="none" restriction="integer" syntax="#item { $(name): 2; }." description="指定要跨的行数。" standard-reference="http://www.w3.org/TR/css3-grid-layout/#grid-row-span-and-grid-column-span"/>

  <CssProperty _locID="grid-template" _locAttrData="description" restriction="string, enum" version="3.0" browsers="none" syntax="#item1 { $(name): 'hh' 'nm' 'ff'; }" description="grid-template 属性提供网格元素结构的可视化，同时定义可用于堆叠网格的子元素的网格单元。" standard-reference="http://www.w3.org/TR/css3-grid-layout/#grid-template">

    <entry value="none"/>
  </CssProperty>

</CssModule>
