<CssModule name="Tables" standard-reference="http://www.w3.org/TR/CSS2/tables.html" status="REC" pub-date="2011-06-07">

  <CssProperty _locID="table-layout" _locAttrData="description" version="2.0" browsers="all" restriction="enum" syntax="table { $(name): fixed; }" description="控制用于对表单元格、行和列进行布局的算法。" standard-reference="http://www.w3.org/TR/CSS2/tables.html#width-layout">

    <entry _locID="table-layout_auto" _locAttrData="description" value="auto" description="使用任何自动表布局算法。"/>
    <entry _locID="table-layout_fixed" _locAttrData="description" value="fixed" description="使用固定表布局算法。"/>
  </CssProperty>

  <CssProperty _locID="caption-side" _locAttrData="description" version="2.0" browsers="C,FF,IE8,O,S" restriction="enum" syntax="caption { $(name): bottom; }" description="指定标题框相对于表框的位置。" standard-reference="http://www.w3.org/TR/CSS2/tables.html#caption-position">

    <entry _locID="caption-side_top" _locAttrData="description" value="top" description="将标题框置于表框上方。"/>
    <entry _locID="caption-side_bottom" _locAttrData="description" value="bottom" description="将标题框置于表框下方。"/>
  </CssProperty>

  <CssProperty _locID="border-spacing" _locAttrData="description" version="2.0" browsers="C,FF1,IE8,O7,S1.2" restriction="length" description="这些长度用于指定将邻近的单元格边框分开的距离。如果指定了一个长度，则同时给出了水平和垂直间距。如果同时指定了两个长度，则第一个长度给出水平间距，第二个长度给出垂直间距。长度不能为负数。" syntax="table { $(name): 10px 50px; }" standard-reference="http://www.w3.org/TR/CSS2/tables.html#borders"/>

  <CssProperty _locID="border-collapse" _locAttrData="description" version="2.0" restriction="enum" syntax="table { $(name): collapse; }" description="选择表的边框模型。" standard-reference="http://www.w3.org/TR/CSS2/tables.html#borders">
    
    <entry _locID="border-collapse_collapse" _locAttrData="description" value="collapse" description="选择折叠边框模型。"/>
    <entry _locID="border-collapse_separate" _locAttrData="description" value="separate" description="选择分离边框模型。"/>
  </CssProperty>

  <CssProperty _locID="empty-cells" _locAttrData="description" version="2.0" browsers="C,FF1,IE7,O4,S1.2" restriction="enum" syntax="table { $(name): hide; }" description="在分离边框模型中，此属性控制没有可见内容的单元格四周的边框和背景的呈现。" standard-reference="http://www.w3.org/TR/CSS2/tables.html#empty-cells">

    <entry _locID="empty-cells_show" _locAttrData="description" value="show" description="将在空单元格(类似于普通单元格)四周/背后绘制边框和背景。"/>
    <entry _locID="empty-cells_hide" _locAttrData="description" value="hide" description="不在空单元格四周/背后绘制边框或背景。"/>
  </CssProperty>

</CssModule>
